
@{
    ViewBag.Title = "Formulario";
}

<div class="jumbotron">
        <h1>Registro de Requerimiento</h1>
</div>

<div class="alert alert-warning">
    <button class="close" data-dismiss="alert"><span>&times;</span></button>
    ¡Recuerda llenar todos los campos!
</div>

<form class="form-horizontal" enctype="multipart/form-data" action="~/Home/GuardarRegistro" method="post">
    <div class="form-row">
        <!--Datos del Req.-->
        <div class="form-group col-lg-4">
            <div class="form-group">
                <label class="col-lg-offset-2 control-label">Datos de Requerimiento</label>
            </div>
            <div class="form-group">
                <label class="col-lg-9 control-label">ID Requerimiento:</label>
                <div class="col-lg-9">
                    <input type="text" name="id_req" class="form-control" placeholder="Automatico" readonly />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Gerente Comercial:</label>
                <div class="col-lg-9">
                    <input type="text" name="gerente_comercial" class="form-control" placeholder="Lic. Nombre Apellidos" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-9 control-label">Motivo Requerimiento:</label>
                <div class="col-lg-9">
                    <input type="text" name="motivo_req" class="form-control" placeholder="Motivo del Requerimiento" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Nombre Cliente:</label>
                <div class="col-lg-9">
                    <input type="text" name="cliente_nom" class="form-control" placeholder="Nombre del Cliente" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Área o Gerencia:</label>
                <div class="col-lg-9">
                    <input type="text" name="gerencia" class="form-control" placeholder="Área o Gerencia" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Empresa Cliente:</label>
                <div class="col-lg-9">
                    <input type="text" name="empresa_cliente" class="form-control" placeholder="Empresa Cliente" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Email Cliente:</label>
                <div class="col-lg-9">
                    <input type="email" name="email_cliente" class="form-control" placeholder="email&#64gmail.com" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Tel. Cliente:</label>
                <div class="col-lg-9">
                    <input type="tel" name="telefono_cliente" class="form-control" placeholder="5511223344" />
                </div>
            </div>
        </div>
        <!--Perfil-->
        <div class="form-group col-lg-4">
            <div class="form-group">
                <label class="col-lg-6 control-label">Perfil</label>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Perfil Solicitado:</label>
                <div class="col-lg-9">
                    <input type="text" name="perfil_solicitante" class="form-control" placeholder="Tester" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Carrera Solicitante:</label>
                <div class="col-lg-9">
                    <input type="text" name="carrera_solicitante" class="form-control" placeholder="Ingenieria en Sistemas" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Nivel Estudios:</label>
                <div class="col-lg-9">
                    <input type="text" name="nivel_estudios" class="form-control" placeholder="Licenciatura" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Años Experiencia:</label>
                <div class="col-lg-9">
                    <input type="text" name="tiempo_experiencia" class="form-control" placeholder="1 o mas" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Cantidad Recursos:</label>
                <div class="col-lg-9">
                    <input type="number" min="1" max="20" name="catidad_recursos" class="form-control" placeholder="1" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Áreas Carreras:</label>
                <div class="col-lg-9">
                    <input type="text" name="areas_carreras" class="form-control" placeholder="Áreas Carreras" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Certificaciones:</label>
                <div class="col-lg-9">
                    <input type="text" name="certificaciones" class="form-control" placeholder="ISTQB" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-9 control-label">Prioridad del Requerimiento:</label>
                <div class="col-lg-9">
                    <select class="form-control" id="prioridad_requerimiento" name="prioridad_requerimiento">
                        <option value="Bajo">Bajo</option>
                        <option value="Medio">Medio</option>
                        <option value="Alto">Alto</option>
                    </select>
                </div>
            </div>
        </div>
        <!--Fecha Req.-->
        <div class="form-group col-lg-4">
            <div class="form-group">
                <label class="col-lg-8 control-label">Fechas Requerimientos</label>
            </div>
            <div class="form-group">
                <label class="col-lg-5 control-label">Fecha Solicitud:</label>
                <div class="col-lg-9">
                    <input type="date" name="fecha_sol_req" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-5 control-label">Fecha Envio:</label>
                <div class="col-lg-9">
                    <input type="date" name="fecha_env_sol" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-5 control-label">Fecha Cierre:</label>
                <div class="col-lg-9">
                    <input type="date" name="fecha_cierre_req" class="form-control" />
                </div>
            </div>
            <hr />
            <!--General-->
            <div class="form-group">
                <label class="col-lg-6 control-label">General</label>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Rango de Edad:</label>
                <div class="col-lg-9">
                    <input type="text" name="rango_edad" class="form-control" placeholder="23-30 años" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Genero:</label>
                <div class="col-lg-9">
                    <select class="form-control" id="genero" name="genero">
                        <option value="Indistinto">Indistinto</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Idiomas:</label>
                <div class="col-lg-9">
                    <input type="text" name="idiomas" class="form-control" placeholder="Ingles" />
                </div>
            </div>
        </div>
    </div>

    <div class="form-row">
        <!--Economia-->
        <div class="col-lg-4">
            <div class="form-group">
                <label class="col-lg-offset-2 control-label">Economia</label>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Rango de Tarifa:</label>
                <div class="col-lg-9">
                    <input type="text" name="rango_tarifa" class="form-control" placeholder="$10,000-$15,000" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Rango de Sueldo:</label>
                <div class="col-lg-9">
                    <input type="text" name="rango_sueldo" class="form-control" placeholder="$10,000-$15,000" />
                </div>
            </div>
        </div>
        <!--Adicionales-->
        <div class="col-lg-4">
            <div>
                <div class="form-group">
                    <label class="control-label">Adicionales</label>
                </div>
                <div class="form-group">
                    <textarea id="adicionales" name="adicionales" class="form-control" rows="6"></textarea>
                </div>
            </div>
        </div>
        <!--Publicacion-->
        <div class="col-lg-4">
            <div class="form-group">
                <label class="col-lg-6 control-label">Publicacion</label>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Compu Trabajo:</label>
                <div class="col-lg-9">
                    <select class="form-control" id="compu_trabajo" name="compu_trabajo">
                        <option value="NO">NO</option>
                        <option value="SI">SI</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-12 control-label">Fecha Publicacion Compu Trabajo:</label>
                <div class="col-lg-9">
                    <input type="date" name="compu_trabajo_fecha" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Redes Socilaes:</label> 
                <div class="col-lg-9">
                    <select class="form-control" id="redes_sociales" name="redes_sociales">
                        <option value="NO">NO</option>
                        <option value="SI">SI</option>
                    </select>
                </div>
            <div class="form-group">
                <label class="col-lg-12 control-label">Fecha Publicacion Redes Sociales:</label>
                <div class="col-lg-9">
                    <input type="date" name="redes_sociales_fecha" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">Pagina WEB:</label>
                <div class="col-lg-9">
                    <select class="form-control" id="pagina_web" name="pagina_web">
                        <option value="NO">NO</option>
                        <option value="SI">SI</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-12 control-label">Fecha Publicacion Pagina Web:</label>
                <div class="col-lg-9">
                    <input type="date" name="pagina_web_fecha" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-6 control-label">OCC Mundial:</label>               
                <div class="col-lg-9">
                    <select class="form-control" id="occ_mundial" name="occ_mundial">
                        <option value="NO">NO</option>
                        <option value="SI">SI</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-12 control-label">Fecha Publicacion OCC Mundial:</label>
                <div class="col-lg-9">
                    <input type="date" name="occ_mundial_fecha" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary form-control">Guardar</button>
    <a href="~/Home/Index" class="btn btn-danger form-control"><ins>Cancelar</ins></a>
</form>